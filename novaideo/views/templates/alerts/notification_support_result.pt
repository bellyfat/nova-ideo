<div i18n:domain="novaideo"
     tal:condition="object.subjects"
     tal:define="alert_kind getattr(object, 'alert_kind', '')">
  <div tal:define="subject object.subjects[0]">
    <span>
      <span i18n:translate="" tal:condition="alert_kind == 'support'">One Member supported this contribution</span> 
	    <span i18n:translate="" i18n:translate="" tal:condition="alert_kind == 'oppose'">One Member opposed this contribution</span> 
	    <span i18n:translate="" tal:condition="alert_kind == 'withdraw'">One Member withdrew his/her token from this contribution</span>.
     </span>
  </div>
</div>
